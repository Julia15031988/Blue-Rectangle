txt="Python"
#variable for letters
i=1
#cycle
for s in txt:
    #making helping text
 t=str(i)+" -letter: "
 print (t,s)
 i=i+1
print ("Finished")


a=float(input("Enter you weight"))
b= float(input("Enter you height"))
c=a/b
if c<18.5:
    print(" You are Underweight")
if  18.5 <= c <25:
    print(" You are NORMAL")
if  25 <= c <30:
    print(" You are Overweight")
if c>30:
    print(" You are Obesity")
    
    
print ("Search the same elements")
A=[2,False,9.1,2-1j, 'hello' ,5, 'Python' ]
B=[5,3,'HELLO',7,12.5,'Python',True,False]
print ("first list" , A)
print ("second list" , B)
print ("the same are: ")
i=0
for a in A:
    i=i+1
    j=0
    for b in B:
        j=j+1
        if a==b:
            txt = str(i) +"-element from the  1 list and "
            txt =txt+ str(j) + "-element from the  2 list i"
            print (txt)
print ("finished")


Try:
    a=float(input("input a:"))
    b=float(input("input b:"))
    x=b/a
    print ("The result x=: ", x)
except ValueError:
    print("You must enter the NUMBER!")
except ZeroDivisionError:
    print("Attention . We can not divede on ZERO")
