print ("The sum of numbers")
n=100
text="1+2+3+...+"  +str(n)+ "="
i=1
s=0
while i<=n:
    s=s+i
    i=i+1
print (text,s)


print ("The sum of numbers")
n=100
text="1+2+3+...+"  +str(n)+ "="
i=1
s=0
while True:
    s+=i
    i+=1
    if i>n:
        break
print (text,s)



# The calculation number of points on which divided sides of figure
n=500
# distanse betwee n 2 points
dz=1/n
#number of points inside plot
pts=0
#meaning of indeks of
i=0
#counting vertical lines
while i<=n:
    x=dz*i
    j=0
    while j<=n:
        y=dz*j
        if y<=x  and y>=x**2:
            pts=pts+1
        j=j+1
    i=i+1
s=pts/(n+1)**2
print('The square og the figure' , s)


print ("The sum of numbers")
n=100
text="1+2+3+...+"  +str(n)+ "="
s=0
for i in range(1,n+1):
    s=s+i
print (text,s)


